# Backend .env example (place this file as backend/.env and fill in real values)

# Django
SECRET_KEY=change-me
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (for local dev outside docker; docker-compose uses root .env)
DB_NAME=chiva_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Firebase
FIREBASE_PROJECT_ID=chiva-computer
# Optional dev bypass (accept unsigned tokens to ease local testing)
DEV_FIREBASE_ACCEPT_UNVERIFIED=1
ENABLE_TOKEN_PAYLOAD_DEBUG=0
# FIREBASE_SERVICE_ACCOUNT_JSON_PATH=path/to/service-account.json
# FIREBASE_SERVICE_ACCOUNT_JSON={...}

# PaySuite
PAYSUITE_BASE_URL=https://paysuite.tech/api
PAYSUITE_API_KEY=your_token_here
# From dashboard > Webhook Settings
PAYSUITE_WEBHOOK_SECRET=your_webhook_secret_here
# Test different PaySuite configurations: clean, direct_v1, direct_v2, direct_v3
PAYSUITE_TEST_MODE=clean

# ==========================================
# WEBHOOK CONFIGURATION (CRITICAL FOR PRODUCTION)
# ==========================================
# This is the URL that Paysuite will send webhook notifications to
# 
# Development (with ngrok):
#   WEBHOOK_BASE_URL=https://abc123.ngrok-free.app
# 
# Production (your domain):
#   WEBHOOK_BASE_URL=https://api.chivacomputer.co.mz
#
# If not set, will use request host (works in production but not in local dev)
WEBHOOK_BASE_URL=http://127.0.0.1:8000
