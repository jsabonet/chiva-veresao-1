# ==========================================
# DJANGO CONFIGURATION
# ==========================================
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_NAME=chiva_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# ==========================================
# PAYSUITE CONFIGURATION
# ==========================================
PAYSUITE_BASE_URL=https://api.paysuite.co.mz
PAYSUITE_API_KEY=your_paysuite_api_key
PAYSUITE_API_SECRET=your_paysuite_api_secret
PAYSUITE_WEBHOOK_SECRET=your_webhook_secret

# Webhook URL (production URL or ngrok for development)
WEBHOOK_BASE_URL=http://127.0.0.1:8000

# ==========================================
# EMAIL CONFIGURATION (BREVO/SENDINBLUE)
# ==========================================

# Brevo API Key (obtenha em: https://app.brevo.com/settings/keys/api)
BREVO_API_KEY=xkeysib-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Email remetente (deve estar verificado no Brevo)
BREVO_SENDER_EMAIL=noreply@chivacomputer.co.mz
BREVO_SENDER_NAME=Chiva Computer

# Email do admin para receber notificações
ADMIN_EMAIL=admin@chivacomputer.co.mz

# Ativar/desativar notificações
EMAIL_NOTIFICATIONS_ENABLED=True
SEND_ORDER_CONFIRMATION=True
SEND_PAYMENT_STATUS=True
SEND_SHIPPING_UPDATES=True
SEND_CART_RECOVERY=True
SEND_ADMIN_NOTIFICATIONS=True

# Configurações de carrinho abandonado
CART_ABANDONMENT_HOURS=2
MAX_RECOVERY_EMAILS=3

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173,https://chivacomputer.co.mz
CORS_ALLOW_ALL_ORIGINS=True
CSRF_TRUSTED_ORIGINS=https://chivacomputer.co.mz,http://157.230.16.193

# ==========================================
# STATIC & MEDIA FILES
# ==========================================
STATIC_ROOT=/var/www/static
MEDIA_ROOT=/var/www/media

